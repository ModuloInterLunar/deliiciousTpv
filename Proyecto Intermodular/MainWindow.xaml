<Window x:Class="Proyecto_Intermodular.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Intermodular"
        mc:Ignorable="d"
        MinHeight="480"
        MinWidth="720"
        Title="MainWindow" Height="450" Width="800" SizeChanged="Window_SizeChanged">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <TabControl Grid.ColumnSpan="2">
            <TabItem Header="Option 1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="151*"/>
                        <ColumnDefinition Width="29*"/>
                        <ColumnDefinition Width="85*"/>
                        <ColumnDefinition Width="529*"/>
                    </Grid.ColumnDefinitions>

                    <Grid x:Name="gridTables" Grid.ColumnSpan="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Tables"/>
                            <Button Grid.Column="1"
                                    Content="Add Table"
                                    x:Name="btnAddTable"
                                    Click="BtnAddTable_Click"/>
                        </Grid>

                        <Canvas x:Name="cnvTables"
                            Grid.Row="1"
                            Background="BurlyWood"
                            AllowDrop="True"
                            Drop="CnvTables_Drop"
                            DragOver="CnvTables_DragOver"/>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ToggleButton Content="Change distribution"
                                x:Name="btnDistribution"
                                Checked="BtnDistribution_Click"
                                Unchecked="BtnDistribution_Click">
                            </ToggleButton>

                            <Button Content="Save distribution"
                                Grid.Column="1"
                                x:Name="btnSaveDistribution"
                                Click="BtnSaveDistribution_Click"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Content="Actions"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Content="Table Selected:"
                                   x:Name="lblTableSelected"/>

                            <Button x:Name="bntDeleteTable"
                                Click="BntDeleteTable_Click"
                                Content="Delete Table" 
                                Grid.Column="2"/>

                            <Grid Grid.Row="1" 
                                  Grid.ColumnSpan="2" 
                                  Grid.RowSpan="2">
                                
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Label Content="Orders:"/>

                                <ListBox Grid.Row="1"
                                         x:Name="ordersList">
                                    <ListBoxItem>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Label>DISH NAME</Label>
                                            <CheckBox VerticalContentAlignment="Center">Is served?</CheckBox>
                                        </StackPanel>
                                    </ListBoxItem>

                                    <ListBoxItem>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Label>DISH NAME</Label>
                                            <CheckBox VerticalContentAlignment="Center">Is served?</CheckBox>
                                        </StackPanel>
                                    </ListBoxItem>

                                    <ListBoxItem>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Label>DISH NAME</Label>
                                            <CheckBox VerticalContentAlignment="Center">Is served?</CheckBox>
                                        </StackPanel>
                                    </ListBoxItem>
                                </ListBox>

                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Option 2">
            </TabItem>

            <TabItem Header="Crear empleado" Height="20" VerticalAlignment="Top">

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="317.6"></ColumnDefinition>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Image Grid.Column="0" Grid.RowSpan="7" Source="C:\Users\mpcmp\OneDrive\Escritorio\gertrudis.jpg" Margin="30,30,30,30"/>

                    <TextBlock Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="Nombre:"/>
                    <TextBlock Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="Apellido:"/>
                    <TextBlock Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="DNI:"/>
                    <TextBlock Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="Nombre de usuario:"/>
                    <TextBlock Grid.Column="1" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="Contraseña:"/>
                    <TextBlock Grid.Column="1" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="Confirmar contraseña:"/>
                    <TextBlock Grid.Column="1" Grid.Row="6" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="Rol:"/>

                    <TextBox Grid.Column="2" Grid.Row="0" FontSize="15" Margin="64,10,64,10" VerticalContentAlignment="Center" x:Name="txtBoxName"/>
                    <TextBox Grid.Column="2" Grid.Row="1" FontSize="15" Margin="64,10,64,10" VerticalContentAlignment="Center" x:Name="txtBoxSurname"/>
                    <TextBox Grid.Column="2" Grid.Row="2" FontSize="15" Margin="64,10,64,10" VerticalContentAlignment="Center" x:Name="txtBoxDni"/>
                    <TextBox Grid.Column="2" Grid.Row="3" FontSize="15" Margin="64,10,64,10" VerticalContentAlignment="Center" x:Name="txtBoxUser"/>
                    <PasswordBox Grid.Column="2" Grid.Row="4" FontSize="15" Margin="64,10,64,10" VerticalContentAlignment="Center" x:Name="passBoxPass"/>
                    <TextBox Visibility="Collapsed" Grid.Column="2" Grid.Row="4" FontSize="15" Margin="64,10,64,10" VerticalContentAlignment="Center" x:Name="txtBoxPass"/>
                    <Button Grid.Column="2" Grid.Row="4" Width="20" Margin="64,10,70,10" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Background="Transparent" BorderThickness="0" x:Name="btnShowHidePassword" Click="btnShowHidePassword_Click">
                        <Image x:Name="imageShowHidePassword" Source="/password_hide.png" />
                    </Button>
                    <PasswordBox Grid.Column="2" Grid.Row="5" FontSize="15" Margin="64,10,64,10" VerticalContentAlignment="Center" x:Name="passBoxConfPass"/>
                    <TextBox Visibility="Collapsed" Grid.Column="2" Grid.Row="5" FontSize="15" Margin="64,10,64,10" VerticalContentAlignment="Center" x:Name="txtBoxConfPass"/>

                    <ComboBox Grid.Column="2" Grid.Row="6" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="80,10,80,10" x:Name="cbRole">
                        <ComboBoxItem HorizontalAlignment="Center" VerticalAlignment="Center">Administrador</ComboBoxItem>
                        <ComboBoxItem HorizontalAlignment="Center" VerticalAlignment="Center" IsSelected="True">Empleado</ComboBoxItem>
                    </ComboBox>

                    <Button Grid.Column="2" Grid.Row="7" Width="60" Height="30" Content="Enviar" Click="BtnCrearEmpleado"/>

                </Grid>

            </TabItem>

        </TabControl>

    </Grid>

</Window>
