<Window x:Class="Proyecto_Intermodular.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Intermodular"
        mc:Ignorable="d"
        MinHeight="480"
        MinWidth="720"
        Title="MainWindow" Height="450" Width="800" SizeChanged="Window_SizeChanged">

    <Grid>
        <TabControl>
            <TabItem Header="Option 1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Grid x:Name="gridTables">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Tables"/>
                            <Button Grid.Column="1"
                                    Content="Add Table"
                                    x:Name="btnAddTable"
                                    Click="BtnAddTable_Click"/>
                        </Grid>

                        <Canvas x:Name="cnvTables"
                            Grid.Row="1"
                            Background="BurlyWood"
                            AllowDrop="True"
                            Drop="CnvTables_Drop"
                            DragOver="CnvTables_DragOver"/>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ToggleButton Content="Change distribution"
                                x:Name="btnDistribution"
                                Checked="BtnDistribution_Click"
                                Unchecked="BtnDistribution_Click">
                            </ToggleButton>

                            <Button Content="Save distribution"
                                Grid.Column="1"
                                x:Name="btnSaveDistribution"
                                Click="BtnSaveDistribution_Click"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Content="Actions"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Content="Table Selected:"
                                   x:Name="lblTableSelected"/>

                            <Button x:Name="bntDeleteTable"
                                Click="BntDeleteTable_Click"
                                Content="Delete Table" 
                                Grid.Column="2"/>

                            <Grid Grid.Row="1" 
                                  Grid.ColumnSpan="2" 
                                  Grid.RowSpan="2">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Label Content="Orders:"/>

                                <ListBox Grid.Row="1"
                                         x:Name="ordersList">
                                    <ListBoxItem>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Label>DISH NAME</Label>
                                            <CheckBox VerticalContentAlignment="Center">Is served?</CheckBox>
                                        </StackPanel>
                                    </ListBoxItem>

                                    <ListBoxItem>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Label>DISH NAME</Label>
                                            <CheckBox VerticalContentAlignment="Center">Is served?</CheckBox>
                                        </StackPanel>
                                    </ListBoxItem>

                                    <ListBoxItem>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Label>DISH NAME</Label>
                                            <CheckBox VerticalContentAlignment="Center">Is served?</CheckBox>
                                        </StackPanel>
                                    </ListBoxItem>
                                </ListBox>

                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Option 2">
            </TabItem>

        </TabControl>
    </Grid>

</Window>
