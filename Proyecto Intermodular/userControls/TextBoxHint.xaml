<UserControl x:Class="Proyecto_Intermodular.userControls.TextBoxHint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Proyecto_Intermodular.userControls"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
    </UserControl.Resources>
    
    <StackPanel Orientation="Vertical" Height="25" HorizontalAlignment="Center">
        <TextBox x:Name="txtBox" Height="22" Width="200" materialDesign:HintAssist.Hint="{Binding Hint}" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" GotFocus="txtBox_GotFocus" LostFocus="txtBox_LostFocus"/>
        <Border BorderThickness="1" Height="3" Background="Black" Width="200"/>
    </StackPanel>

</UserControl>
