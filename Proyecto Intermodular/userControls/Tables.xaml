<UserControl x:Class="Proyecto_Intermodular.userControls.Tables"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_Intermodular.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF2281D1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="grdTables">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnReload" Background="Transparent" BorderThickness="0" Margin="5">
                    <Image Source="/Proyecto Intermodular;component/images/reload_icon.png"/>
                </Button>
                <Button x:Name="btnSave" Background="Transparent" BorderThickness="0" Margin="5">
                    <Image Source="/Proyecto Intermodular;component/images/save_icon.png"/>
                </Button>

                <Button x:Name="btnMove" Background="Transparent" BorderThickness="0" Margin="5" Click="btnMove_Click">
                    <Image Source="/Proyecto Intermodular;component/images/move_icon.png"/>
                </Button>
                <Button x:Name="btnAdd" Background="Transparent" BorderThickness="0" Margin="5" Click="BtnAddTable_Click">
                    <Image Source="/Proyecto Intermodular;component/images/add_icon.png"/>
                </Button>
                <Button x:Name="btnDelete" Background="Transparent" BorderThickness="0" Margin="5">
                    <Image Source="/Proyecto Intermodular;component/images/bin_icon.png"/>
                </Button>
            </StackPanel>

            <Canvas x:Name="cnvTables" Grid.Row="1" AllowDrop="True" DragOver="cnvTables_DragOver">
                <Canvas.Background>
                    <ImageBrush ImageSource="/Proyecto Intermodular;component/images/restaurante.png"></ImageBrush>
                </Canvas.Background>
            </Canvas>
        </Grid>
    </Grid>
</UserControl>
